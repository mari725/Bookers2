<!--#本の編集ページ-->
<body>
  <main>
    <div class="conteiner">

      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>
    <%= render 'layouts/error', obj: @book %>

    <%= form_with model: @book do |f| %>

      <div class="form-group">
      <label for="inputTitle">Title</label>
      <%= f.text_field :title, autofocus: true, id:"inputName", placefolder:"タイトル" %>
      </div>

      <div class="form-group">
        <label for="inputBody">Opinion</label>
        <%= f.text_field :body, autofocus: true, id:"inpubody", placefolder:"タイトル" %>
      </div>

      <div class="form-group">
        <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
      </div>
      <% end %>

      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>

        </div>
      </div>
    </div>
  </main>
</body>