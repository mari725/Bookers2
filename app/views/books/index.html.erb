<!--#Books一覧-->
<div class="container px-5 px-sm-0">
   <%= render 'layouts/error', obj: @book %>

  <div class="row">
    <div class="col-md-3">
<%= render 'book', book: @book, user: @user %>
    </div>
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
     <span>
    <td>
    <%= link_to user_path(book.user_id) do %>
    <%= image_tag book.user.get_profile_image(80,80) %>
    <% end %>
    </td>
    <td>
      <%= link_to book_path(book.id) do %>
      <%= book.title %>
      <% end %>
    </td>
    <td><%= book.body %></td>
    </span>
    </tr>

    <% end %>

  </tbody>
  </table>
  </div>
  </div>
</div>