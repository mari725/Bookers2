<!--#User編集ページ-->
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">


    <h2>User info</h2>
    <%= render 'layouts/error', obj: @user %>

    <%= form_with model: @user do |f| %>
    <div>
      <label for="inputName">Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
    </div>
    <div>
      <label for="inputImage">Image</label>
      <%= f.field :profile_image, placeholder:"プロフィール画像", accept: "image/*" %>
    </div>
    <div>
      <label for="inputBody">Introduction</label>
      <%= f.text_area :introduction, autofocus: true, id:"inputBody" %>
    </div>
    <div>
      <%= f.submit "Update User" %>
    </div>
    <% end %>
      </div>
  </div>
</div>